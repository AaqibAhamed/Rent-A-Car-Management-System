                    <GradientStop Color="#FFFDFDFD" Offset="0.564"/>
                    <GradientStop Color="#FFBABFCF" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
